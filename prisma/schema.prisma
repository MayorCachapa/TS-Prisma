// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id @default(uuid())
  name       String
  email      String
  role       Role         @default(BASIC)
  Project    Project[]
  Experience Experience[]
  Social     Social[]
}

enum Role {
  BASIC
  ADMIN
}

model Social {
  id        String   @id @default(uuid())
  name      String
  alt       String
  icon      String
  url       String
  author    User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id          String   @id @default(uuid())
  title       String
  description String
  thumbnail   String
  tech        String[]
  author      User     @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Experience {
  id          String   @id @default(uuid())
  name        String
  role        String
  thumbnail   String
  url         String
  start       String
  end         String
  description String[]
  author      User     @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
